<div>
    <h2>Update Post</h2>
    <form id="update-post-form">
        <label for="post-title">Post Title</label>
        <input type="text" name="post-title" value="{{post.postTitle}}"/>
        <label for="post-content">Post Content</label>
        <textarea name="post-content">{{post.postContent}}</textarea>
        <button type="submit">Update Post</button>
    </form>

    <button type="click" id="delete-post-btn">Delete Post</button>
</div>

<script src="/js/updatePost.js"></script>
<script src="/js/deletePost.js"></script>