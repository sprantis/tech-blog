<div>
    <h2>Update Post</h2>
    <form id="update-post-form">
        <label class="form-label" for="post-title">Post Title</label>
        <input class="form-input" type="text" name="post-title" value="{{post.postTitle}}"/>
        <label class="form-label" for="post-content">Post Content</label>
        <textarea class="form-textarea" name="post-content">{{post.postContent}}</textarea>
                <div class="mt-4">
            <button class="btn btn-primary" type="submit">Update Post</button>
        </div>
    </form>
    <div class="mt-4">
        <button type="click" class="btn btn-danger" id="delete-post-btn">Delete Post</button>
    </div>

    <script src="/js/updatePost.js"></script>
    <script src="/js/deletePost.js"></script>
</div>

