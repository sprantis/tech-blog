<div>
    <div class="flex-row justify-space-between mb-4">
        <h3>Your Posts</h3>
        <a href="/dashboard/new"><button class="btn btn-primary">Add New Post</button></a>
    </div>
    {{#if posts.length}}
        {{#each posts as |post|}}
        <h5 class="mb-4">
            <a href="/dashboard/edit/{{post.id}}">{{post.postTitle}}</a>
        </h5>
        {{/each}}
    {{else}}
        <p>You have no posts.</p>
    {{/if}}
</div>


